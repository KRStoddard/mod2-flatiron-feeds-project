<body class="create-account">
<div class="new-post-box">
    <h1> New Comment </h1>

    <%= form_for @comment do |f| %>
    <%= f.text_area :content, placeholder: "Write Your Comment", class:"textarea1"%><br><br>
    <%= f.submit "Add Comment", class:"submit-button" %>
    <% end %>
    <div class="return-button">
    <% if flash[:post]%>
    <%= button_to "Return to Post", post_path(flash[:post]), {method: :get} %>
    <% end %>
    </div>

</div>
</body>


