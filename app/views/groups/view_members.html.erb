<div class="post-container">

<h2 class="my-post-title"> <%= @group.name %> <h2>
    <%#shows group members and links to their profile. Ordered by most recent%>
<p class="members-word"> Members: </p>
        <ul> 
             <% @group.sort_memberships.each do |groupmember| %>
                <div class="members-box">    
                <li class="groupmember-name">
                <%= link_to groupmember.user.full_name, user_path(groupmember.user) %>
              </li>
              <li class="groupmember-date">  
              Joined: <%= groupmember.created_at.strftime("%B %d, %Y") %> 
             </li>
            </div>
        </ul>
        <% end %>
    

<%#allows user to return to the group they were looking at%>
<div class="return-to-grp">
<%= button_to "Return to Group Page", group_path(@group), method: :get %>
</div>

</div>

