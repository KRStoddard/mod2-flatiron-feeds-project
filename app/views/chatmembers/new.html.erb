<h2> Add Chat Member </h2>
<%= form_for @chatmember do |f| %>
<%= f.label :user %>
<%= f.collection_select :user_id, @users, :id, :username %><br>
<%= f.label :chat %>
<%= f.collection_select :chat_id, @chats, :id, :name %>
<%= f.submit %>
<% end %>

<%= button_to "Return to Chat", chat_path(flash[:chat]), {method: :get} %>