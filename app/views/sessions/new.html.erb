
<body class="login-main">
<%#shows error messages if you don't get information correct%>
<% if flash[:error] %>
<div class="alert">
<span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
      <%= flash[:error] %>
</div>
<% end %>

<div class="login-box">
<h1> Login </h1>
<%#allows user to sign in, we used encrypted passwords%>
<%= form_for :session, url: login_path do |f| %>
<%= f.text_field :username, placeholder: "Username", class:"textfield" %><br>
<%= f.password_field :password, placeholder: "Password", class:"textfield" %>
<%= f.submit "Login", class:"login-button" %>
<% end %>

</div>

</body>
